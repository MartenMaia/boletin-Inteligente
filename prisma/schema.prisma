generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String? @unique
  name      String?
  role      String  @default("admin")
}

model Association {
  id   Int    @id @default(autoincrement())
  name String
}

model Bairro {
  id           Int      @id @default(autoincrement())
  name         String
  association  Association? @relation(fields: [associationId], references: [id])
  associationId Int?
}

model Cliente {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String
  bairroId Int
  bairro   Bairro @relation(fields: [bairroId], references: [id])
}

model Aviso {
  id       Int      @id @default(autoincrement())
  source   String
  titulo   String
  texto    String
  bairroId Int
  bairro   Bairro   @relation(fields: [bairroId], references: [id])
  status   String   @default("draft")
  createdAt DateTime @default(now())
}

model Boletim {
  id       Int      @id @default(autoincrement())
  bairroId Int
  bairro   Bairro   @relation(fields: [bairroId], references: [id])
  data     DateTime @default(now())
  conteudo String
  status   String   @default("draft")
}

model Group {
  id          Int    @id @default(autoincrement())
  name        String
  description String?
  members     GroupMember[]
}

model GroupMember {
  id       Int    @id @default(autoincrement())
  groupId  Int
  group    Group  @relation(fields: [groupId], references: [id])
  name     String
  contact  String
  bairroId Int?
}

model BulletinSettings {
  id         Int     @id @default(autoincrement())
  title      String
  types      String  // JSON stringified array of types
  sources    String  // JSON stringified array of sources
  approver   String?
  frequency  String
  segmentation String // JSON
  groupId    Int?
  group      Group?  @relation(fields: [groupId], references: [id])
}
